<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="email_template_customs_declaration" model="mail.template">
            <field name="name">Declaration: Send by email</field>
            <field name="model_id" ref="customs.item"/>
            <field name="email_from">${user.email_formatted |safe}</field>
            <field name="email_to">declaration_inbound@cratle.co.uk</field>
            <field name="subject">${object.company_id.name} Declaration (Ref ${object.declaration_id or 'n/a'})</field>
	    <field name="use_default_to" eval="False"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
Hi
	% if object.declaration_id:
	    ${object.declaration_id}
	% else:
	    --No DUCR--
	% endif

    </p>
</div>
            </field>
        </record>
    </data>
</odoo>

